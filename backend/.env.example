# ========================================
# ENVIRONMENT VARIABLES TEMPLATE
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env with real credentials to version control!

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API (optional, currently not used)
ANTHROPIC_API_KEY=your_anthropic_key_here

# Database Configuration
# For local development, use PostgreSQL to match production:
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name
# For Render production, this is auto-configured
DATABASE_URL=postgresql://user:password@localhost:5432/erasmus_db

# Neo4j Database (if using graph database features)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Application Security
# Generate a secure random key for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secure-secret-key-here

# PayPal Payment Integration (REQUIRED for payments)
# Get credentials from: https://developer.paypal.com/dashboard/
# For production, use LIVE credentials; for testing, use SANDBOX credentials
PAYPAL_CLIENT_ID=your-paypal-client-id-here
PAYPAL_CLIENT_SECRET=your-paypal-client-secret-here
PAYPAL_MODE=sandbox  # Use "sandbox" for testing, "live" for production
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id-here

# Stripe Payment Integration (optional, not currently used)
STRIPE_SECRET_KEY=your_stripe_key_here

# Firecrawl API for web crawling and partner search (OPTIONAL)
# Get your API key from: https://firecrawl.dev
FIRECRAWL_API_KEY=fc-your-firecrawl-api-key-here

# Application Settings
DEBUG=False  # IMPORTANT: Set to False in production!
# For development, you can set DEBUG=True
